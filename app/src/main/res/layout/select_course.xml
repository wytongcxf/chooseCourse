<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Bg2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#01B8B8"
        android:id="@+id/top"
        android:paddingBottom="30dp">
        <ImageView
            android:id="@+id/returnHome"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/fanhui"
            />
        <ImageView
            android:id="@+id/tab"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/xuanxiangka"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/one"
            android:textSize="30sp"
            android:textColor="@color/fontColor"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top"
        android:gravity="center"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="姓名:"
                android:textSize="20sp"
                android:textColor="@color/Bg"
                android:id="@+id/text1"
                android:layout_marginBottom="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="性别:"
                android:textSize="20sp"
                android:layout_below="@id/text1"
                android:textColor="@color/Bg"
                android:id="@+id/text2"
                android:layout_marginBottom="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="年龄:"
                android:textSize="20sp"
                android:layout_below="@id/text2"
                android:textColor="@color/Bg"
                android:id="@+id/text3"/>
            <EditText
                android:id="@+id/stuName"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:textSize="20sp"
                android:layout_toRightOf="@id/text1"
                android:layout_alignTop="@id/text1"
                android:layout_alignBottom="@id/text1"
                android:background="@drawable/input"

                android:paddingLeft="2sp"
                android:paddingRight="2sp"
                android:layout_marginLeft="15dp"

                />
            <RadioGroup
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_alignTop="@id/text2"
                android:layout_alignBottom="@id/text2"
                android:layout_toRightOf="@id/text2"
                android:layout_alignLeft="@id/stuName"
                android:orientation="horizontal"

                >
                <RadioButton
                    android:id="@+id/boy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:textSize="20sp"
                    android:textColor="@color/Bg"
                    android:checked="true"
                    />
                <RadioButton
                    android:id="@+id/girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:textSize="20sp"
                    android:textColor="@color/Bg"
                    android:layout_marginLeft="20dp"

                    />
            </RadioGroup>
            <EditText
                android:id="@+id/stuAge"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:inputType="number"
                android:layout_below="@id/stuName"
                android:layout_toRightOf="@id/text3"
                android:layout_alignBottom="@id/text3"
                android:layout_alignTop="@id/text3"
                android:background="@drawable/input"
                android:paddingLeft="2sp"
                android:paddingRight="2sp"
                android:layout_alignLeft="@id/stuName"/>
            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:background="@drawable/radius"
                android:textColor="@color/fontColor"
                android:textSize="20sp"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/text3"
                android:layout_marginTop="40dp"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
