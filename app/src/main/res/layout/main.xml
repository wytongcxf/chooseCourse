<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Bg2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#01B8B8"
        android:id="@+id/top"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/logo"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/ziti"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/xxkc"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/image1"
                />
            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/kcxx"
                android:layout_below="@id/image1"
                android:layout_alignLeft="@id/image1"
                android:id="@+id/image2"
                android:layout_marginTop="24dp"
                />
            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/xsxx"
                android:layout_below="@id/image2"
                android:layout_alignLeft="@id/image2"
                android:id="@+id/image3"
                android:layout_marginTop="24dp"
                />
            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/xxkcxx"
                android:layout_below="@id/image3"
                android:layout_alignLeft="@id/image3"
                android:id="@+id/image4"
                android:layout_marginTop="24dp"
                />
            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/bz"
                android:layout_below="@id/image4"
                android:layout_alignLeft="@id/image4"
                android:id="@+id/image5"
                android:layout_marginTop="24dp"
                />
            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/tcxt"
                android:layout_below="@id/image5"
                android:layout_alignLeft="@id/image5"
                android:id="@+id/image6"
                android:layout_marginTop="24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one"
                android:textSize="20sp"
                android:id="@+id/text1"
                android:textColor="#01B8B8"
                android:layout_alignTop="@id/image1"
                android:layout_toRightOf="@id/image1"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/two"
                android:textSize="20sp"
                android:id="@+id/text2"
                android:textColor="#01B8B8"
                android:layout_alignTop="@id/image2"
                android:layout_alignLeft="@id/text1"
                android:layout_alignRight="@id/text1"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/three"
                android:textSize="20sp"
                android:id="@+id/text3"
                android:textColor="#01B8B8"
                android:layout_alignTop="@id/image3"
                android:layout_alignLeft="@id/text1"
                android:layout_alignRight="@id/text1"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/four"
                android:textSize="20sp"
                android:id="@+id/text4"
                android:textColor="#01B8B8"
                android:layout_alignTop="@id/image4"
                android:layout_alignLeft="@id/text1"
                android:layout_alignRight="@id/text1"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/five"
                android:textSize="20sp"
                android:id="@+id/text5"
                android:textColor="#01B8B8"
                android:layout_alignTop="@id/image5"
                android:layout_alignLeft="@id/text1"
                android:layout_alignRight="@id/text1"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/six"
                android:textSize="20sp"
                android:id="@+id/text6"
                android:textColor="#01B8B8"
                android:layout_alignTop="@id/image6"
                android:layout_alignLeft="@id/text1"
                android:layout_alignRight="@id/text1"
                android:textAlignment="center"
                />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
